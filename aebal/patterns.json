{
    "location": {
        "solidTriangle": {
            "difficulty": 0,
            "velChoices": ["linearUp"],
            "categories": ["default", "heavyBeat"],
            "spawnMode": 1,
            "equation": "abs(y + abs(x)) + abs(x) - 1",
            "range": 1.05,
            "countBounds": "10, 13",
            "scaleBounds": "0.7, 1.3",
            "speedBounds": "0.5",
            "distBounds": "0.25, 0.5"
        },
        "triangle": {
            "velChoices": ["90deg"],
            "categories": ["default", "heavyBeat"],
            "equationX": "cos(t)/(abs(sin(t)+abs(cos(t)))+abs(cos(t)))",
            "equationY": "sin(t)/(abs(sin(t)+abs(cos(t)))+abs(cos(t)))",
            "distBounds": "0, 0.25",
            "scaleBounds": "2, 0.75",
            "speedBounds": "0.4, 0.6",
            "modifiers": ["evenSpacing"]
        },
        "square": {
            "velChoices": ["90deg"],
            "categories": ["default", "heavyBeat"],
            "equationX": "cos(t)/max(abs(cos(t)), abs(sin(t)))",
            "equationY": "sin(t)/max(abs(cos(t)), abs(sin(t)))",
            "distBounds": "0, 0.25",
            "scaleBounds": "2, 0.75",
            "speedBounds": "0.4, 0.6",
            "modifiers": ["evenSpacing"]
        },
        "circle": {
            "velChoices": ["90deg"],
            "categories": ["default", "heavyBeat"],
            "equationX": "cos(t)",
            "equationY": "sin(t)",
            "distBounds": "0, 0.25",
            "scaleBounds": "2, 0.75",
            "speedBounds": "0.4, 0.6"
        }
    },
    "velocity": {
        "linearUp": {
            "equationX": "0",
            "equationY": "1",
            "speedBounds": "0.5, 2",
            "modifiers": ["disableRandomRotation"]
        },
        "constDiag": {
            "equationX": "1",
            "equationY": "1",
            "rotationSnapping": 4,
            "modifiers": ["disableRotationStacking"]
        },
        "90deg": {
            "equationX": "cos(atan2(y, x) + pi / 2)",
            "equationY": "sin(atan2(y, x) + pi / 2)",
            "modifiers": ["disableRandomRotation"]
        }

    }
}